{
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "prettier/react",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "plugins": ["eslint-plugin-prettier", "react", "import", "jsx-a11y"],
  "rules": {
    "react/prop-types": 0,
    // "brace-style": "allman",
    //"no-console": 2,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2
      }
    ],
    "jsx-a11y/label-has-for": 0,
    "no-console": 1
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  }
}
